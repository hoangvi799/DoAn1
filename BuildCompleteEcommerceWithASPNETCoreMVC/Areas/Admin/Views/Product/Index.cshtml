
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@using DoAn1.Models;

<section class="content-header">
    <h1>
        Product List
    </h1>
</section>

<section class="content">

    @if (TempData["error"] != null)
    {
        <div class="row">
            <div class="col-xs-12">
                <div class="alert alert-danger alert-dismissible">
                    <h4><i class="icon fa fa-ban"></i> Failed!</h4>
                    Deleted Failed!!!
                </div>
            </div>
        </div>
    }

    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Product List</h3>
                </div>

                <!-- /.box-header -->
                <div class="box-body">
                    <table id="productTable" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Photo</th>
                                <th>Price</th>
                                <th>Status</th>
                                <th>Featured</th>
                                <th>Category</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in ViewBag.Products)
                            {
                                Product pr = (Product)product;
                                var photo = pr.Photos.SingleOrDefault(p => p.Featured == true);
                            <tr>
                                <td>@product.Id</td>
                                <td>@product.Name</td>
                                <td><img src="~/products/@photo.Name" width="100" /></td>
                                <td>@product.Price</td>
                                <td>@(product.Status ? "Show" : "Hide")</td>
                                <td>@(product.Featured ? "Featured" : "")</td>
                                <td>@(product.Category.Name)</td>
                                <td>
                                    <a asp-area="admin" asp-controller="product" asp-action="edit" asp-route-id="@product.Id">Edit</a> |
                                    <a asp-area="admin" asp-controller="product" asp-action="delete" asp-route-id="@product.Id" onclick="return confirm('Bạn có chắc chắn xóa?')">Delete</a> |
                                    <a asp-area="admin" asp-controller="photo" asp-action="index" asp-route-id="@product.Id">Photo List</a> |
                                    <a asp-area="admin" asp-controller="photo" asp-action="add" asp-route-id="@product.Id">Add Photo</a>
                                </td>
                            </tr>
                            }
                        </tbody>

                        <tfoot>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Photo</th>
                                <th>Price</th>
                                <th>Status</th>
                                <th>Featured</th>
                                <th>Category</th>
                                <th>Action</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>
</section>

<script>
    $(function () {
        $('#productTable').DataTable({
            'paging': true,
            'lengthChange': false,
            'searching': false,
            'ordering': true,
            'info': true,
            'autoWidth': false
        })
    })
</script>

