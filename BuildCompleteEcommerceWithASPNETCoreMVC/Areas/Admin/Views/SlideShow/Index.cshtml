
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<section class="content-header">
    <h1>
        SlideShow List
    </h1>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">SlideShow List</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="slideShowTable" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Photo</th>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var slideShow in ViewBag.SlideShows)
                            {
                            <tr>
                                <td>@slideShow.Id</td>
                                <td>
                                    <img src="~/slideshows/@slideShow.Name" width="120" />
                                </td>
                                <td>@slideShow.Title</td>
                                <td>@slideShow.Description</td>
                                <td>@(slideShow.Status ? "Show" : "Hide")</td>
                                <td>
                                    <a asp-area="admin" asp-controller="slideshow" asp-action="edit" asp-route-id="@slideShow.Id">Edit</a> |
                                    <a asp-area="admin" asp-controller="slideshow" asp-action="delete" asp-route-id="@slideShow.Id" onclick="return confirm('Bạn có chắc chắn xóa?')">Delete</a>
                                </td>
                            </tr>                              
                            }
                        </tbody>

                        <tfoot>
                            <tr>
                                <th>Id</th>
                                <th>Photo</th>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>
</section>

<script>
    $(function () {
        $('#slideShowTable').DataTable({
            'paging': true,
            'lengthChange': false,
            'searching': false,
            'ordering': true,
            'info': true,
            'autoWidth': false
        })
    })
</script>

