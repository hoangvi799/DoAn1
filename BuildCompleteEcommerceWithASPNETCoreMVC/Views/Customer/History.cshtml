
@{
    ViewData["Title"] = "Customer Dashboard";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<ul class="breadcrumb">
   <li><a asp-controller="home" asp-action="index">Home</a> <span class="divider">/</span></li>
   <li class="active">Invoice Management</li>
</ul>

    <section id="Table">
        <div class="page-header">
            <h3>QUẢN LÝ ĐƠN HÀNG</h3>
        </div>
        <div class="row-fluid">
            <div class="span12">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Created</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var invoice in ViewBag.invoices)
                        {
                        <tr>
                            <td>@invoice.Id</td>
                            <td>@invoice.Name</td>
                            <td>@invoice.Created.ToString("MM/dd/yyyy")</td>
                            <td>@(invoice.Status == 1 ? "Pending" : "Done")</td>
                            <td><a asp-controller="customer" asp-action="details" asp-route-id="@invoice.Id">Details</a></td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>

